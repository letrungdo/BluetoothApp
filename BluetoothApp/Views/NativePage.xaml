<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BluetoothApp.Views.NativePage"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:behaviors="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:converters="clr-namespace:BluetoothApp.Markup.Converters"
    x:Name="root"
    Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style
                TargetType="Button">
                <Setter
                    Property="HeightRequest"
                    Value="44" />
                <Setter
                    Property="Padding"
                    Value="0" />
            </Style>
            <converters:StatusConverter
                x:Key="statusConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout
        Orientation="Vertical">
        <ListView
            RowHeight="65"
            BackgroundColor="Gray"
            IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsRefreshing}"
            ItemsSource="{Binding Devices}"
            SelectedItem="{Binding DeviceSelected}">
            <ListView.Behaviors>
                <behaviors:EventToCommandBehavior
                    EventName="ItemTapped"
                    Command="{Binding ItemTappedCommand}"
                    EventArgsParameterPath="Item" />
            </ListView.Behaviors>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <AbsoluteLayout
                            Padding="10,5">
                            <Label
                                AbsoluteLayout.LayoutBounds="0,0,.5,.5"
                                AbsoluteLayout.LayoutFlags="All"
                                Text="{Binding Name}"
                                FontAttributes="Bold" />
                            <Button
                                AbsoluteLayout.LayoutBounds=".95,.5,110,.5"
                                AbsoluteLayout.LayoutFlags="XProportional,YProportional,HeightProportional"
                                Text="{Binding Connected, Converter={StaticResource statusConverter}}"
                                TextColor="White"
                                BackgroundColor="Green"
                                CornerRadius="5"
                                BorderColor="DarkGreen"
                                IsVisible="{Binding Connected}"
                                Command="{Binding Source={x:Reference root}, Path=BindingContext.DisconnectCommand}"
                                CommandParameter="{Binding .}" />
                            <Label
                                AbsoluteLayout.LayoutBounds="0,1,1,.5"
                                AbsoluteLayout.LayoutFlags="All"
                                Text="{Binding Address, StringFormat='{0}'}" />

                        </AbsoluteLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>